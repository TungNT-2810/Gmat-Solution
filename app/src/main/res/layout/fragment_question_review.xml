<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionReviewActivity">
    <ScrollView
        android:background="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_content"
                    android:textSize="15sp"
                    android:padding="16dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/question_content_txt"
                    android:textSize="15sp"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:background="@color/color_white"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/color_white">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <org.iliat.gmat.item_view.AnswerCRQuestionReview
                        android:id="@+id/answer_queston_review_1"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_background_line"/>
                    <org.iliat.gmat.item_view.AnswerCRQuestionReview
                        android:id="@+id/answer_queston_review_2"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_background_line"/>
                    <org.iliat.gmat.item_view.AnswerCRQuestionReview
                        android:id="@+id/answer_queston_review_3"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_background_line"/>
                    <org.iliat.gmat.item_view.AnswerCRQuestionReview
                        android:id="@+id/answer_queston_review_4"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_background_line"/>
                    <org.iliat.gmat.item_view.AnswerCRQuestionReview
                        android:id="@+id/answer_queston_review_5"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical|left"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
