<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#224b5f"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_layout_grey"
        >

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center_vertical|center_horizontal">

            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/home_arc_progress"
                android:layout_width="90dp"
                android:layout_height="90dp"
                custom:arc_progress="80"
                custom:arc_text_color="@color/color_white"
                custom:arc_text_size="25sp"
                custom:arc_stroke_width="8dp"
                custom:arc_bottom_text_size="15sp"
                custom:arc_finished_color="#ff7f00"
                custom:arc_unfinished_color="@color/color_white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="Skill level"
                android:textColor="@color/color_white"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/txtSkillLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="Master"
                android:textColor="#ffb753"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnMore"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="More"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:background="@drawable/custom_button_orange"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:text="Swipe to choose Q packs!"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_forward_white_24dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/list_pack_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:layoutManager="LinearLayoutManager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.7"
        android:background="@drawable/custom_layout_grey"
        android:orientation="horizontal">

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/reminder"
            android:drawablePadding="-10dp"
            android:gravity="center"
            android:text="Reminder"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="20sp"

            />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#555555" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="-15dp"
            android:drawableRight="@drawable/about_uss"
            android:gravity="center"
            android:text="About us"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>