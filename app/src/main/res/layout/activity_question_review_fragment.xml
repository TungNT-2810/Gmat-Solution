<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.QuestionReviewActivity">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/activity_review_tool_bar">
    </include>

    <RelativeLayout
        android:layout_below="@id/tool_bar"
        android:id="@+id/top_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00E676"
        android:minHeight="45dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:id="@+id/txt_correct"/>
        <TextView
            android:id="@+id/txt_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="Time: 1:00"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_above="@+id/bottom_controller"
        android:layout_below="@id/top_controller"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/bottom_controller"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btn_open"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_add_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_normal"
                android:text="BACK"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@id/btn_next"
                style="@style/Widget.AppCompat.Button.Colored"
                android:foreground="?android:attr/selectableItemBackground" />
            <Button
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_normal"
                android:text="NEXT"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:foreground="?android:attr/selectableItemBackground" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btnImgButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/cutom_image_button"
                android:src="@drawable/ic_vertical_align_bottom_white_24dp" />
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_above="@id/bottom_controller"
        android:layout_marginBottom="10dp"
        android:id="@+id/layout_tag"
        android:background="#FFFDE7">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/grey"
            android:background="@drawable/round_button_grey"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_tag_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_tag_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text="UNANSWERED"
            android:textColor="#000000"
            android:id="@+id/tv_grey"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/btn_tag_grey"
            android:src="@mipmap/green"
            android:background="@drawable/round_button_green"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_tag_green"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_tag_green"
            android:layout_above="@id/btn_tag_grey"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="I UNDERSTOOD"
            android:textColor="#000000"
            android:id="@+id/tv_green"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/btn_tag_green"
            android:src="@mipmap/yellow"
            android:background="@drawable/round_button_yellow"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_tag_yellow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_tag_yellow"
            android:layout_above="@id/btn_tag_green"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="I SOMEWHAT UNDERSTAND"
            android:textColor="#000000"
            android:id="@+id/tv_yellow"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/btn_tag_yellow"
            android:src="@mipmap/red"
            android:background="@drawable/round_button_red"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_tag_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_tag_red"
            android:layout_above="@id/btn_tag_yellow"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="I DON'T UNDERSTAND"
            android:id="@+id/tv_red"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/btn_tag_red"
            android:src="@drawable/ic_star_white_24dp"
            android:background="@drawable/round_button_star"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_tag_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_tag_star"
            android:layout_above="@id/btn_tag_red"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="INTERESTING"
            android:textColor="#000000"
            android:id="@+id/tv_star"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@id/btn_tag_star"
            android:src="@mipmap/ic_share_white_24dp"
            android:background="@drawable/round_button_share"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_share"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/btn_share"
            android:layout_above="@id/btn_tag_star"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:text="SHARE"
            android:textColor="#000000"
            android:id="@+id/tv_share"/>

    </RelativeLayout>





</RelativeLayout>
