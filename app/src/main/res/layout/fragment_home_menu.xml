<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_home_background"
    android:orientation="vertical"
    android:id="@+id/fragment_home_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/home_layout_marginTio"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/home_layout_marginTio"
            android:layout_marginTop="@dimen/home_layout_marginTio"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_questions"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_button_marginBottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_home"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Question Packs"
                android:textSize="@dimen/text_size_home" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/home_layout_marginTio"
            android:layout_marginTop="@dimen/home_layout_marginTio"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_summary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_button_marginBottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_home"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_summary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Summary"
                android:textSize="@dimen/text_size_home" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/home_layout_marginTio"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_layout_marginTio"
            android:layout_marginTop="@dimen/home_layout_marginTio"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_button_marginBottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_home"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About us"
                android:textSize="@dimen/text_size_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_layout_marginTio"
            android:layout_marginTop="@dimen/home_layout_marginTio"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_about"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/home_button_marginBottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_home"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About us"
                android:textSize="@dimen/text_size_home" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>